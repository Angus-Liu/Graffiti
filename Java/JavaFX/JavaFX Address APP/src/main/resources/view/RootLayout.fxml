<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="450.0"
            prefWidth="700.0" stylesheets="@../css/DarkTheme.css" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.angus.address.view.RootLayoutController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="New" onAction="#handleNew"/>
                <MenuItem mnemonicParsing="false" text="Open" onAction="#handleOpen"/>
                <MenuItem mnemonicParsing="false" text="Save" onAction="#handleSave"/>
                <MenuItem mnemonicParsing="false" text="Save As..." onAction="#handleSaveAs"/>
                <MenuItem mnemonicParsing="false" text="About" onAction="#handleAbout"/>
                <MenuItem mnemonicParsing="false" text="Exit" onAction="#handleExit"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Statistics">
                <MenuItem mnemonicParsing="false" text="Show Birthday Statistics"
                          onAction="#handleShowBirthdayStatistics"/>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
